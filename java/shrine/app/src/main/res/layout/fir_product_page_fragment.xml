<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductPageFragment">
    <LinearLayout
        android:id="@+id/product_page_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fir_product_image"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:paddingTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fir_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Producto"
                android:paddingTop="60dp"
                android:paddingLeft="20dp"
                android:textAppearance="@style/TextAppearance.Fire.TitleProduct"/>

            <TextView
                android:id="@+id/fir_product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:textAppearance="@style/TextAppearance.Fire.Subtitle1"/>

            <TextView
                android:id="@+id/fir_product_descripction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textAppearance="@style/TextAppearance.Fire.Subtitle"/>

            <TextView
                android:id="@+id/fir_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70â‚¬"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="50dp"
                android:textAppearance="@style/TextAppearance.Fire.TitleProduct"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/fir_bt_message"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="176dp"
                android:layout_height="56dp"
                android:text="@string/fir_contact"
                android:elevation="8dp"
                app:icon="@mipmap/add"
                app:cornerRadius="56dp"
                android:layout_gravity="center|bottom"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>